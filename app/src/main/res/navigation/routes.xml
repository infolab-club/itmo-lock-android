<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/routes"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="club.infolab.itmo_lock.ui.rooms.RoomsFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_lockFragment"
            app:destination="@id/lockFragment" />
    </fragment>
    <fragment
        android:id="@+id/lockFragment"
        android:name="club.infolab.itmo_lock.ui.lock.LockFragment"
        android:label="LockFragment" >
        <action
            android:id="@+id/action_lockFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>